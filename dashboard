      { symbol: 'DOGE', name: 'Dogecoin', balance: 5000.00, price: 0.08, value: 400.00, allocation: 0.8, change: -3.21, iconClass: 'crypto-icon-doge' }
    ];

    const mockOrderBook = [
      { price: 45235.0, amount: 0.05, type: "buy" },
      { price: 45234.8, amount: 0.12, type: "buy" },
